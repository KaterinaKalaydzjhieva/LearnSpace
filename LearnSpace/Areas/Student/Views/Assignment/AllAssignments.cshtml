@model AllAssignmentsViewModel

@{
    ViewBag.Title = "Assignments";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="font-size:40px; font-weight: 700;">All Assignments</h2>
    <p class="text-muted">Total Assignments: <strong>@Model.AssignmentCount</strong></p>

    @if (Model.Assignments.Any())
    {
        <table class="table table-hover table-bordered" style="border: 3px solid black;">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Submitted</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.Assignments)
                {
                    <tr>
                        <th scope="row">@assignment.Id</th>
                        <td>@assignment.Title</td>
                        <td>@assignment.DueDate</td>
                        <td>
                            @if (assignment.IsSubmitted)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-controller="Assignment" asp-action="AssignmentInfo" asp-route-id="@assignment.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            No assignments are currently available.
        </div>
    }
</div>
