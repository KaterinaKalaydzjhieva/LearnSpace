@model CreateClassModel

@{
    ViewBag.Title = "Create Class";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create Class</h2>
    <form asp-action="CreateClass" method="post" class="mt-4">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Class Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter class name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Class Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a brief description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GroupCapacity" class="form-label">Group Capacity</label>
            <input asp-for="GroupCapacity" class="form-control" type="number" min="1" placeholder="Enter group capacity" />
            <span asp-validation-for="GroupCapacity" class="text-danger"></span>
        </div>
        <input asp-for="TeacherId" class="teacherId" value="@Model.TeacherId" type="hidden" />

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Class" asp-action="AllClassesForTeacher" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
