@model AssignmentsClassViewModel

@{
    ViewBag.Title = $"Assignments for {Model.ClassName}";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">All Assignments</h2>
    <p class="text-muted">Total Assignments: <strong>@Model.AssignmentCount</strong></p>

    @if (Model.Assignments.Any())
    {
        <table class="table table-hover table-bordered" style="border: 3px solid black;">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Due Date</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.Assignments)
                {
                    <tr>
                        <th scope="row">@assignment.Id</th>
                        <td>@assignment.Title</td>
                        <td>@assignment.DueDate</td>
                        <td class="text-center">
                            <!-- Example Action Buttons -->
                            <a href="@Url.Action("Details", "Assignment", new { id = assignment.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Delete", "Assignment", new { id = assignment.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            No assignments are currently available.
        </div>
    }
</div>
