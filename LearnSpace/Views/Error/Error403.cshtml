@{
    ViewBag.Title = "403 - Access denied";
}
<div class="container" style="margin-top: 10%; display: flex; align-items: center;">
    <div style="flex: 1; margin-right: 20px; text-align: left;">
        <img src="@Url.Content("~/images/AccessDenied.jpg")" alt="403 Illustration" style="max-width: 500px; width: 100%; height: auto;">
    </div>
    <div style="flex: 2;">
        <h2>Access Denied</h2>
        <p>
            Sorry, you don't have permission to access this page.<br>
            If you believe this is a mistake, please contact your administrator or try logging in with appropriate credentials.
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="padding: 10px 20px; border-radius: 5px;">Go Back to Home</a>
    </div>
</div>