@{
    ViewBag.Title = "500 - Internal Server Error";
}
<div class="container" style="margin-top: 10%; display: flex; align-items: center;">
    <div style="flex: 1; margin-right: 20px; text-align: left;">
        <img src="@Url.Content("~/images/Error500.jpg")" alt="500 Internal Server Error Illustration" style="max-width: 500px; width: 100%; height: auto;">
    </div>
    <div style="flex: 2;">
        <h2>Something Went Wrong</h2>
        <p>
            We're sorry, but an unexpected error has occurred on our server.<br>
            Please try again later, or contact support if the problem persists.
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="padding: 10px 20px; border-radius: 5px;">Go Back to Home</a>
    </div>
</div>
