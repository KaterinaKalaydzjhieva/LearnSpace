@{
    ViewData["Title"] = "Choose Your Role";
}

<div class="container text-center" style="margin-top: 100px;">
    <h1 class="display-4" style="margin-bottom: 50px; font-weight: bold;">
        👋 Welcome! Choose Your Role 🚀
    </h1>

    <div class="row justify-content-center">
        <!-- Teacher Card -->
        <div class="col-md-5">
            <div class="card shadow-lg" style="border-radius: 20px; transition: transform 0.3s;">
                <div class="card-body" style="padding: 40px;">
                    <h2 class="card-title" style="font-size: 2.5rem;">👨‍🏫 Teacher</h2>
                    <p class="card-text" style="font-size: 1.2rem; margin: 20px 0;">
                        Manage your classes, assignments, and track student progress.
                    </p>
                    <a asp-controller="User" asp-action="RegisterTeacher" class="btn btn-primary btn-lg" style="border-radius: 50px; font-size: 1.5rem; padding: 10px 30px;">
                        I'm a Teacher ✏️
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-1"></div> <!-- Spacer Column -->
        <!-- Student Card -->
        <div class="col-md-5">
            <div class="card shadow-lg" style="border-radius: 20px; transition: transform 0.3s;">
                <div class="card-body" style="padding: 40px;">
                    <h2 class="card-title" style="font-size: 2.5rem;">🧑‍🎓 Student</h2>
                    <p class="card-text" style="font-size: 1.2rem; margin: 20px 0;">
                        Access your assignments, track progress, and connect with your teachers.
                    </p>
                    <a asp-controller="User" asp-action="RegisterStudent" class="btn btn-success btn-lg" style="border-radius: 50px; font-size: 1.5rem; padding: 10px 30px;">
                        I'm a Student 📚
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer / Spacing -->
    <div style="margin-top: 100px;">
        <p style="font-size: 1.2rem; color: gray;">Make the right choice for your journey! 🚀</p>
    </div>
</div>

<!-- Custom Hover Effect -->
<style>
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
    }
</style>
